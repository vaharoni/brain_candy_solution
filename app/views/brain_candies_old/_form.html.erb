      <%= f.label :difficulty_level %>
      <br/>
      <%= f.select :difficulty_level_id, DifficultyLevel.all.map { |dl| [dl.name, dl.id] } %>
    </div>

    <p><%= brain_candy_photo %></p>

    <div class="field">
      <%= f.file_field :photo %>
    </div>
