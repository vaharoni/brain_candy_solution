<%= form_for(@brain_candy, html: {multipart: true}) do |f| %>
    <% if @brain_candy.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@brain_candy.errors.count, "error") %> prohibited this brain_candy from being saved:</h2>

          <ul>
            <% @brain_candy.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :name %>
      <br/>
      <%= f.text_field :name %>
    </div>
